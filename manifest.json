{
  "manifest_version": 3,
  "name": "Browser Assistant",
  "version": "0.0.1",
  "description": "Summarize pages and chat with an AI (llama)",
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:1234/*",
    "https://api.anthropic.com/*",
    "https://api.openai.com/*",
    "<all_urls>"
  ],
  "background": { "service_worker": "src/background/background.js" },
  "action": {
    "default_icon": {
      "16": "icons/duck_16.png",
      "48": "icons/duck_48.png",
      "128": "icons/duck_128.png"
    }
  },
  "side_panel": {
    "default_path": "plugin.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["src/content/content.js"]
  }]
}